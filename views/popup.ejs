<!-- Job -->
<div class="modal fade" id="job">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="job-title">Job</h4>
      </div>
      <div class="modal-body" id="job-body">
	<label>名字 (可填)</label>
	<input type='text' class='form-control' id='job-name'/><br />
	<label>命令</label>
	<input type='text' class='form-control' id='job-command' onkeyup="job_command = $(this).val(); job_string();"/><br />
	<label>快捷方式</label><br />
	<a class="btn btn-primary" onclick="schedule = '@reboot'; job_string();">重启</a>
	<a class="btn btn-primary" onclick="schedule = '@hourly'; job_string();">每小时</a>
	<a class="btn btn-primary" onclick="schedule = '@daily'; job_string();">每天</a>
  <a class="btn btn-primary" onclick="schedule = '@weekly'; job_string();">每周</a>
	<a class="btn btn-primary" onclick="schedule = '@monthly'; job_string();">每月</a>
	<a class="btn btn-primary" onclick="schedule = '@yearly'; job_string();">每年</a><br /><br />

	<div class="row">
		<div class="col-md-2">分钟</div>
		<div class="col-md-2">小时</div>
		<div class="col-md-2">天</div>
		<div class="col-md-2">月</div>
		<div class="col-md-2">周</div>
	</div>
	<div class="row">
		<div class="col-md-2"><input type="text" class="form-control" id="job-minute" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-hour" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-day" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-month" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><input type="text" class="form-control" id="job-week" value="*" onclick="this.select();"/></div>
		<div class="col-md-2"><a class="btn btn-primary" onclick="set_schedule();">设置</a></div>
	</div>

	<br />
	<br />
	<label>任务</label>
	<input type='text' class='form-control' id='job-string' disabled='disabled'/><br />
	<label><input type="checkbox" id="job-logging" checked="true" style="position:relative;top:2px"/> 启用日志.</label><br />
	<a class="btn btn-primary btn-small" data-json="{}" onclick="setMailConfig(this);" id="job-mailing">邮件</a>
	<a class="btn btn-primary btn-small" data-json="{}" onclick="setHookConfig(this);">钩子Hooks</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="job-save">保存</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<div class="modal fade" id="popup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modal-title">消息</h4>
      </div>
      <div class="modal-body" id="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="modal-close-button">关闭</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-button">确认</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

